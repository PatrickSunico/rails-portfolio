<%= minimal_form_for @contact, wrapper: :vertical_form, remote: true do |f| %>

  <!-- Makes this as a partial -->
  <div class="form-group success">
      <%= f.error_notification%>
      <%= f.input :name, :class => "form-control", input_html: { :autocomplete => "off" } %>
      <%= f.input :email,:class => "form-control", input_html: { :autocomplete => "off" } %>
      <%= f.input :message, :as => :text, :class => "form-control", :input_html => {:rows => 6, :autocomplete => "off"} %>
  </div>

  <div class="form-group">
    <div class= "hidden">
      <%= f.text_field :nickname, :autocomplete => :off, :hint => 'Leave this field blank!' %>
    </div>
  </div>

  <div class="form-actions">
    <!-- <%= f.submit 'Send message', :class=> "btn btn-sharp", role: "button", :data => {:disable_with => 'Sending...'}%> -->
    <%= f.button :button, "Send Message".html_safe, data: {disable_with: "<i class=“fa fa-circle-o-notch fa-spin“></i> Sending..."}, :class => "btn btn-sharp" %>

  </div>

<% end %>
