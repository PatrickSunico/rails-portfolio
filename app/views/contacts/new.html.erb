<section id="contact">
    <div class="container">
      <div class="row">
        <div class="header-text inverted-header">
          <h1>Contact</h1>
          <hr class="line">
        </div>
        <!-- Forms -->
        <div class="col-sm-12 form-wrapper">
          <h2>Get In Touch</h2>
          <p class="firstMessage">
            Got an idea in mind? Drop me a message and say hello and Iâ€™ll get back to you as soon as possible
          </p>
          <p class="secondaryMessage">
            Or if you're old school and fancy an email instead you can email me directly at <a class="email-link" href="mailto:apatricksunico@gmail.com">apatricksunico@gmail.com</a>
          </p>

          <div id="notice">

           </div>
          <%= form_for @contact, remote: true do |f| %>


            <div class=" form-group">
              <%= f.text_field :name, :autocomplete => :off, :placeholder => "Name" ,  :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_field :email, :autocomplete => :off, :pattern => '^.+@.+$', :placeholder => "Email", :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.text_area :message, :autocomplete => :off, :placeholder => "Message",:as => :text, :class => "form-control" ,:rows => 6 %>
            </div>

            <div class= "hidden">
              <%= f.text_field :nickname, :autocomplete => :off, :hint => 'Leave this field blank!' %>
            </div>
              <%= f.submit 'Send message', :class=> "btn btn-sharp", :id => "submit"%>
          <% end %>

        </div>
      </div>
    </section>
