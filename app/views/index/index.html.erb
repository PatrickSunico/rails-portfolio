
<!-- Spa Page -->
<!-- About Section -->
<%= render(:partial => "editable-sections/about-section")%>

<!-- Renders the Services Section structure along with the partials -->
<%= services_section('Services') do %>
  <!-- Render the panels -->
  <% @services.each do |services|%>
    <%= render(:partial => 'editable-sections/services/services-panels', :locals => {:services => services})%>
  <% end %>
<%end%>

<!-- section_for _portfolio-section partial structured layout -->
<!-- index.html.erb /controller-template -->
<%= portfolio_section('Portfolio') do %>
  <!-- nested partials -->
  <!--  Send data from our json file and pass in local variable for it to be interpolated  -->
  <% @data.each do |data| %>
      <%= render(:partial => 'editable-sections/panels/panel', :locals => {:data => data})%>
  <% end %>
<% end %>

<!-- Contact -->
<%= contact_section('Contact') do %>
  <%= render(:partial => "editable-sections/contact", :locals => {:contact => @contact})%>
<% end %>
